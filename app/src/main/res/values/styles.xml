<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewTitle" parent="text_style">
        <item name="fontFamily">@font/chesnagrotesk_medium</item>
        <item name="android:textSize">@dimen/second_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/fourth_margin</item>
        <item name="android:lineSpacingExtra">@dimen/first_margin</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="backgroundTint">@drawable/default_app_round_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundedEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius_edit_text</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius_edit_text</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius_edit_text</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius_edit_text</item>
        <item name="boxStrokeColor">@color/base_color_3</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/base_color_3</item>
        <item name="colorPrimary">@color/base_color_3</item>
    </style>

    <style name="MenuTheme">
        <item name="elevation">@dimen/first_margin</item>
        <item name="background">@drawable/bottom_navigation_shape</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/chesnagrotesk_medium</item>
    </style>

    <style name="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/chesnagrotesk_medium</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/trip_dialog</item>
    </style>
</resources>