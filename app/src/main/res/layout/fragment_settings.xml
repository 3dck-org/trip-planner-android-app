<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.fragments.menu_fragments.SettingsFragment">

    <TextView
        android:id="@+id/theme_setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/third_margin"
        android:fontFamily="@font/baloo_bold"
        android:text="@string/theme"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/third_margin"
        android:fontFamily="@font/baloo_bold"
        android:text="Settings"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/theme_setting_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/third_margin"
        android:fontFamily="@font/baloo_regular"
        android:visibility="gone"
        android:text="@string/theme_setting_description"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/theme_setting_tv"
        app:layout_constraintBottom_toBottomOf="@id/theme_setting_tv"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/theme_switch_thumb"
        app:track="@drawable/theme_switch_track"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/theme_setting_description_tv"
        android:layout_marginTop="@dimen/fourth_margin"
        />

    <View
        android:id="@+id/elevation_line_v"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:alpha="0.3"
        android:layout_marginTop="@dimen/third_margin"
        android:background="@drawable/custom_elevation_bottom"
        app:layout_constraintTop_toBottomOf="@+id/theme_switch"
        />

    <com.example.tripplanner.ui.custom_views.SettingsItemView
        android:id="@+id/libraries_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/second_margin"
        android:layout_marginTop="@dimen/first_margin"
        android:clickable="true"
        app:enabled="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/elevation_line_v"
        app:si_text="Libraries" />

    <com.example.tripplanner.ui.custom_views.SettingsItemView
        android:id="@+id/accont_details_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/second_margin"
        android:clickable="true"
        app:enabled="true"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:si_text="Account details" />

    <com.example.tripplanner.ui.custom_views.SettingsItemView
        android:id="@+id/accont_aboutus_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/second_margin"
        android:clickable="true"
        app:enabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accont_details_setting"
        app:si_text="About us" />

    <com.example.tripplanner.ui.custom_views.SettingsItemView
        android:id="@+id/logout_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/second_margin"
        android:clickable="true"
        app:enabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accont_aboutus_setting"
        app:si_text="Logout" />
</androidx.constraintlayout.widget.ConstraintLayout>