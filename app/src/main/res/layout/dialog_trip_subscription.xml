<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/trip_dialog"
    android:elevation="4dp"
    android:minWidth="300dp">

    <TextView
        android:id="@+id/trip_title_tv"
        style="@style/TextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_second_margin"
        android:fontFamily="@font/baloo_bold"
        android:text="@string/information_text"
        android:textColor="@color/base_color_3"
        android:textSize="@dimen/half_third_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trip_name_tv"
        style="@style/text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/second_margin"
        android:layout_marginTop="@dimen/second_margin"
        android:textSize="@dimen/second_margin"
        android:fontFamily="@font/baloo_medium"
        android:textColor="@color/base_color_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/trip_title_tv"
        android:layout_marginHorizontal="@dimen/fourth_margin"
        android:text="Your current journey has been ended. Thank you." />

    <Button
        android:id="@+id/sign_in_btn"
        style="@style/DefaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/second_margin"
        android:layout_marginVertical="@dimen/second_margin"
        android:background="@drawable/default_app_round_button"
        android:fontFamily="@font/baloo_bold"
        android:text="Okay"
        android:textAlignment="center"
        android:textSize="14sp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trip_name_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
