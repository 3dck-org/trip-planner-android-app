<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/trip_iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:elevation="6dp"
            android:maxHeight="300dp"
            android:src="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/trip_like_btn"
            style="@style/DefaultButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:background="@drawable/bg_trip_item_btn"
            android:src="@drawable/ic_like_filled"
            app:tint = "@color/like_color"
            android:scaleType="center"
            android:tint="@color/like_color"
            app:fabSize="mini"
            app:fabCustomSize="42dp"
            app:layout_constraintBottom_toBottomOf="@id/trip_iv"
            app:layout_constraintEnd_toEndOf="@id/trip_iv" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_back"
            style="@style/DefaultButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_trip_item_btn"
            android:contentDescription="TODO"
            android:src="@drawable/ic_arrow_back"
            app:tint = "@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="24dp"
            app:fabSize="mini"/>


        <TextView
            android:id="@+id/title_trip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/baloo_bold"
            android:text="@string/current_trip_title"
            android:textColor="@color/base_color_3"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trip_iv" />

        <View
            android:id="@+id/line_1_v"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="8dp"
            android:background="@color/base_color_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_trip_tv" />

        <ImageView
            android:id="@+id/user_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_1_v" />

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/baloo_semibold"
            android:textColor="@color/base_color_3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/user_iv"
            app:layout_constraintStart_toEndOf="@id/user_iv"
            app:layout_constraintTop_toTopOf="@id/user_iv"
            tools:text="Pavel Zlacheuski" />

        <ImageView
            android:id="@+id/created_at_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_updated"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_iv" />

        <TextView
            android:id="@+id/created_at_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/baloo_semibold"
            android:textColor="@color/base_color_3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/created_at_iv"
            app:layout_constraintStart_toEndOf="@id/created_at_iv"
            app:layout_constraintTop_toTopOf="@id/created_at_iv"
            tools:text="01.02.2001" />

        <ImageView
            android:id="@+id/distance_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_distance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/created_at_iv" />

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/baloo_semibold"
            android:textColor="@color/base_color_3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/distance_iv"
            app:layout_constraintStart_toEndOf="@id/distance_iv"
            app:layout_constraintTop_toTopOf="@id/distance_iv"
            tools:text=" 18km 523 m" />

        <ImageView
            android:id="@+id/duration_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_name_tv"
            app:layout_constraintTop_toBottomOf="@id/created_at_iv"
            app:layout_constraintTop_toTopOf="@id/user_iv" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/baloo_semibold"
            android:textAlignment="center"
            android:textColor="@color/base_color_3"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/duration_iv"
            app:layout_constraintStart_toStartOf="@id/duration_iv"
            app:layout_constraintTop_toBottomOf="@id/duration_iv"
            tools:text="1 h 34m" />

        <TextView
            android:id="@+id/description_trip_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo_regular"
            android:lineSpacingExtra="-6dp"
            android:textAlignment="center"
            android:textColor="@color/base_color_3"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/distance_tv"
            tools:text="Each city has a place that is its showcase and a must-see on any trip. In Warsaw, it’s the Old Town, entered on the UNESCO World Heritage List – it’s where the city’s heart has been" />

        <View
            android:id="@+id/line_2_v"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="16dp"
            android:background="@color/base_color_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_trip_tv" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/places_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_items_places"
            android:minWidth="300dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_2_v"
            app:strokeColor="@color/base_color_3"
            app:strokeWidth="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:listitem="@layout/item_places"
                tools:visibility="visible" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="96dp"
            android:background="@drawable/bg_end_trip_btn"
            android:fontFamily="@font/baloo_bold"
            tools:text="End trip"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/places_rv"
            app:layout_constraintStart_toStartOf="@id/places_rv"
            app:layout_constraintTop_toBottomOf="@id/places_rv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>