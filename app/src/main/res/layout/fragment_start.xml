<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".views.fragments.StartFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/title_cv"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_margin="@dimen/sixth_margin"
        android:elevation="10dp"
        app:cardCornerRadius="@dimen/second_margin"
        android:background="@color/white"
        app:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:elevation="4dp"
            android:src="@drawable/app_background" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_tv"
        style="@style/TextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fourth_margin"
        android:text="@string/start_title_text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_cv" />

    <Button
        android:id="@+id/sign_in_btn"
        style="@style/DefaultButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/default_app_round_button"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/login"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/fourth_margin"
        app:layout_constraintEnd_toEndOf="@id/title_tv"
        app:elevation = "8dp"
        android:elevation = "8dp"
        app:layout_constraintStart_toStartOf="@id/title_tv"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <Button
        android:id="@+id/sign_up_btn"
        style="@style/DefaultButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/default_app_round_button"
        android:fontFamily="@font/roboto_medium"
        android:text="Sign up"
        android:textAlignment="center"
        app:elevation = "8dp"
        android:elevation = "8dp"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/third_margin"
        app:layout_constraintEnd_toEndOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="@id/title_tv"
        app:layout_constraintTop_toBottomOf="@id/sign_in_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>