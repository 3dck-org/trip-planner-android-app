<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/current_trip_empty_layout"
    android:background="#2B2145"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:background="@drawable/oval_bg"
        android:backgroundTint="@color/base_color_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="180"
        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="@string/empty_current_trip_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="32dp" />

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_regular"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="-6dp"
        android:text="@string/empty_current_trip_description"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/second_margin" />

    <View
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:background="@drawable/oval_bg"
        android:backgroundTint="@color/base_color_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <ImageView
        android:id="@+id/planet_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_space_way_2"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="background image" />

</androidx.constraintlayout.widget.ConstraintLayout>