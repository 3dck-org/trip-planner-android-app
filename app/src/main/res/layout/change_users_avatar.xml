<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/trip_dialog"
    android:elevation="4dp"
    android:minWidth="300dp">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/sixth_margin"
        android:layout_height="@dimen/sixth_margin"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/ProgressBarTheme" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/second_margin"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/avatar_url"
        android:textColor="@color/base_color_3"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/avatar_url_il"
        style="@style/RoundedEditTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/first_margin"
        android:layout_marginEnd="@dimen/second_margin"
        android:hint="@string/avatar_url_hint"
        app:errorEnabled="false"
        app:errorIconTint="@color/white"
        app:hintTextColor="@color/base_color_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title_tv"
        app:layout_constraintTop_toBottomOf="@id/title_tv">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/avatar_url_et"
            style="@style/RoundedEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/update_avatar_btn"
        style="@style/DefaultButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/third_margin"
        android:layout_marginVertical="@dimen/second_margin"
        android:background="@drawable/default_app_round_button"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/update_avatar_btn_text"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="14sp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/avatar_url_il"
        app:layout_constraintStart_toStartOf="@id/avatar_url_il"
        app:layout_constraintTop_toBottomOf="@id/avatar_url_il"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>