<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_trip"
        style="@style/DefaultButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_trip_item_btn"
        android:enabled="true"
        app:icon="@drawable/ic_started_trip"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/baloo_semibold"
        android:maxWidth="250dp"
        android:maxLines="2"
        android:textColor="@color/base_color_3"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/btn_trip"
        app:layout_constraintTop_toTopOf="@id/btn_trip"
        tools:text="Frederyk Chopin Museum" />

    <TextView
        android:id="@+id/tv_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/baloo_semibold"
        android:includeFontPadding="false"
        android:textColor="@color/base_color_3"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/btn_trip"
        app:layout_constraintTop_toBottomOf="@id/tv_place_name"
        android:maxWidth="250dp"
        tools:text="Adress" />

    <View
        android:id="@+id/separate_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginVertical="16dp"
        android:background="@color/base_color_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_place_address" />

</androidx.constraintlayout.widget.ConstraintLayout>