<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripPlanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_color_3</item>
        <item name="colorPrimaryVariant">@color/base_color_3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TripPlanner.Night" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_color_2</item>
        <item name="colorPrimaryVariant">@color/base_color_2</item>
        <item name="colorOnPrimary">@color/base_color_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_color_2</item>
        <item name="colorSecondaryVariant">@color/base_color_2</item>
        <item name="colorOnSecondary">@color/base_color_2</item>
        <item name="android:textColor">@color/base_color_2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/base_color_2</item>
        <!-- Customize your theme here. -->
    </style>
</resources>