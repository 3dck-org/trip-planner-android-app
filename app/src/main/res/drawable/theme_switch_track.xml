<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/base_color_3"/>
            <corners android:radius="64sp"/>
            <stroke android:color="@color/base_color_3"
                android:width="1dp"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow"/>
            <corners android:radius="64sp"/>
        </shape>
    </item>

    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/disabled_button"/>
            <corners android:radius="64sp"/>
            <stroke android:color="@color/disabled_button"
                android:width="1dp"/>
        </shape>
    </item>

</selector>