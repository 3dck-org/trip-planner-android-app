<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Non focused states
     -->
    <item android:color="@color/base_color_3" android:state_enabled="true"  android:state_pressed="false">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/fourth_margin" />

            <solid android:color="@color/base_color_3" />

        </shape>
    </item>
    <!--When Button is in pressed state -->


    <!--When Button is in pressed state -->
    <item android:color="@color/base_color_3_disabled" android:elevation="0dp" android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/fourth_margin" />

            <solid android:color="@color/base_color_3_disabled" />

        </shape>
    </item>

    <!--When Button is in selected state -->
    <item android:color="@color/disabled_button" android:elevation="0dp" android:state_enabled="false">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/fourth_margin" />

            <solid android:color="@color/disabled_button" />

        </shape>
    </item>

    <!--Default Background Color -->
    <item android:color="@color/base_color_3" android:elevation="0dp">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/fourth_margin" />

            <solid android:color="@color/base_color_3" />

        </shape>
    </item>
    <!--Default Background Color -->
</selector>