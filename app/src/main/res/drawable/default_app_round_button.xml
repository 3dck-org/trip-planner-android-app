<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Non focused states
     -->
    <item android:color="@color/base_color_3" android:state_enabled="true" android:state_focused="false" android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/fourth_margin" />

            <solid android:color="@color/base_color_3" />

        </shape>
    </item>
    <!--When Button is in pressed state -->


    <!--When Button is in pressed state -->
    <item android:color="@color/base_color_3" android:elevation="0dp" android:state_enabled="true" android:state_pressed="false" android:state_selected="true" android:state_focused="false">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/fourth_margin" />

            <solid android:color="@color/base_color_3" />

        </shape>
    </item>


